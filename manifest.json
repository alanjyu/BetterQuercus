{
    "manifest_version": 2,
    "name": "Better Quercus",
    "description": "A vastly improved Quercus experience.",
    "version": "1.5",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "content_scripts":[
        {
          "matches":[
            "https://q.utoronto.ca/*"
          ],
          "js": ["content.js"]
        }
      ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
      },
    
      "background": {
          "scripts": ["background.js"],
          "persistent": false
        },
    "permissions": [
        "activeTab"
      ]
    }